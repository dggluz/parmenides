{
    "compilerOptions": {
        "strict": true,
        "outDir": "dist/lib",
        "moduleResolution": "node",
        "target": "es2015",
        "module":"es2015",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": { "parmenides": ["../../src/parmenides"] }
    }
}